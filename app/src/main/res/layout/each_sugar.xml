<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="1dp"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="6dp">
        <LinearLayout
            android:id="@+id/linsi"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/field_fasting"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal|clip_horizontal"
                android:textColor="#000000"
                android:textSize="21sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/field_pp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|bottom|clip_horizontal"
                android:textColor="#000000"
                android:textSize="21sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/field_random"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|bottom"
                android:textColor="#000000"
                android:textSize="21sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:id="@+id/field_date"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="10sp"
            tools:ignore="SmallSp" />
    </android.support.v7.widget.CardView>
</RelativeLayout>